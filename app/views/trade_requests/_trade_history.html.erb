<div class="row">
	<div class="col-md-12">
		<div class="table-responsive">
			<table class="table table-bordered">
				<caption><h4><%= t('sticker_album.trade_request.history.title') %></h4></caption>
				<tr>
					<th><%= t('sticker_album.trade_request.history.date')         %></th>
					<th><%= t('sticker_album.trade_request.history.offerer')      %></th>
					<th><%= t('sticker_album.trade_request.history.receiver')     %></th>
					<th><%= t('sticker_album.trade_request.history.response')     %></th>
					<th><%= t('sticker_album.trade_request.history.response_date')%></th>
				</tr>
				<%= render @trade_requests || t('sticker_album.nothing') %>
			</table>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= will_paginate @trade_requests, renderer: BootstrapPagination::Rails %>
	</div>
</div>